{
  "serviceName": "pitchey-api",
  "environment": "production",
  "version": "1.0.0",
  "monitoring": {
    "enabled": true,
    "providers": {
      "sentry": {
        "enabled": true,
        "dsn": "SENTRY_DSN_PLACEHOLDER",
        "tracesSampleRate": 0.1,
        "profilesSampleRate": 0.1
      },
      "cloudflare": {
        "analytics": true,
        "webAnalytics": true,
        "realUserMonitoring": true
      }
    },
    "metrics": {
      "api": {
        "responseTime": {
          "enabled": true,
          "buckets": [10, 25, 50, 100, 250, 500, 1000, 2500, 5000]
        }
      }
    }
  }
}
