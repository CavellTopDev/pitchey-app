[Unit]
Description=Pitchey Health Monitoring Service
After=network.target

[Service]
Type=simple
User=supremeisbeing
WorkingDirectory=/home/supremeisbeing/pitcheymovie/pitchey_v0.2
ExecStart=/bin/bash /home/supremeisbeing/pitcheymovie/pitchey_v0.2/monitoring/continuous-monitor.sh
Restart=always
RestartSec=10
StandardOutput=append:/home/supremeisbeing/pitcheymovie/pitchey_v0.2/monitoring/logs/monitor.log
StandardError=append:/home/supremeisbeing/pitcheymovie/pitchey_v0.2/monitoring/logs/monitor-error.log

[Install]
WantedBy=multi-user.target