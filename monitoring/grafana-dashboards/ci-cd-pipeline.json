{
  "dashboard": {
    "id": null,
    "title": "Pitchey - CI/CD Pipeline Monitoring",
    "tags": ["pitchey", "cicd", "github-actions", "deployment"],
    "timezone": "browser",
    "refresh": "1m",
    "schemaVersion": 27,
    "version": 1,
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "repository",
          "type": "custom",
          "query": "pitchey_v0.2",
          "current": {
            "value": "pitchey_v0.2",
            "text": "pitchey_v0.2"
          }
        },
        {
          "name": "workflow",
          "type": "query",
          "query": "label_values(github_actions_workflow_runs_total, workflow_name)",
          "current": {
            "value": "all",
            "text": "All Workflows"
          }
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Pipeline Success Rate",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(github_actions_workflow_runs_total{repository=\"$repository\",status=\"success\"}[24h])) / sum(rate(github_actions_workflow_runs_total{repository=\"$repository\"}[24h])) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 90},
                {"color": "green", "value": 95}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Average Pipeline Duration",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "avg(github_actions_workflow_duration_seconds{repository=\"$repository\"}) / 60",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "m",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 20}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Deployments Today",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "increase(deployment_frequency_total{environment=\"production\"}[24h])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 4,
        "title": "Mean Time to Recovery",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "avg(deployment_mttr_seconds{environment=\"production\"}) / 60",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "m",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 30},
                {"color": "red", "value": 60}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Pipeline Execution Timeline",
        "type": "graph",
        "gridPos": {"h": 9, "w": 24, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "github_actions_workflow_duration_seconds{repository=\"$repository\",workflow_name=~\"$workflow\"} / 60",
            "refId": "A",
            "legendFormat": "{{workflow_name}} ({{status}})"
          }
        ],
        "yAxes": [
          {
            "unit": "m",
            "min": 0,
            "label": "Duration (minutes)"
          }
        ],
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "max": true,
          "min": true,
          "avg": true
        }
      },
      {
        "id": 6,
        "title": "Deployment Frequency",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 17},
        "targets": [
          {
            "expr": "increase(deployment_frequency_total{environment=\"production\",status=\"success\"}[1h])",
            "refId": "Success",
            "legendFormat": "Successful Deployments"
          },
          {
            "expr": "increase(deployment_frequency_total{environment=\"production\",status=\"failure\"}[1h])",
            "refId": "Failure",
            "legendFormat": "Failed Deployments"
          }
        ],
        "yAxes": [
          {
            "unit": "short",
            "min": 0,
            "label": "Deployments per hour"
          }
        ]
      },
      {
        "id": 7,
        "title": "Lead Time for Changes",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 17},
        "targets": [
          {
            "expr": "deployment_lead_time_seconds{repository=\"$repository\",environment=\"production\"} / 3600",
            "refId": "A",
            "legendFormat": "Lead Time (hours)"
          }
        ],
        "yAxes": [
          {
            "unit": "h",
            "min": 0,
            "label": "Hours"
          }
        ]
      },
      {
        "id": 8,
        "title": "Build Artifact Sizes",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 25},
        "targets": [
          {
            "expr": "build_artifact_size_bytes{environment=\"production\"} / 1048576",
            "refId": "A",
            "legendFormat": "{{artifact_type}} (MB)"
          }
        ],
        "yAxes": [
          {
            "unit": "decbytes",
            "min": 0,
            "label": "Size (MB)"
          }
        ]
      },
      {
        "id": 9,
        "title": "Test Coverage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 25},
        "targets": [
          {
            "expr": "test_coverage_percentage{component=~\".*\"}",
            "refId": "A",
            "legendFormat": "{{component}} - {{test_type}}"
          }
        ],
        "yAxes": [
          {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "label": "Coverage %"
          }
        ]
      },
      {
        "id": 10,
        "title": "Security Vulnerabilities",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 33},
        "targets": [
          {
            "expr": "security_vulnerabilities_total",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true
              },
              "renameByName": {
                "severity": "Severity",
                "component": "Component",
                "scan_type": "Scan Type",
                "Value": "Count"
              }
            }
          }
        ]
      },
      {
        "id": 11,
        "title": "Pipeline Failure Analysis",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 33},
        "targets": [
          {
            "expr": "sum by (workflow_name) (github_actions_workflow_runs_total{repository=\"$repository\",status=\"failure\"})",
            "refId": "A",
            "legendFormat": "{{workflow_name}}"
          }
        ],
        "options": {
          "pieType": "pie",
          "tooltip": {
            "mode": "single"
          },
          "legend": {
            "displayMode": "visible",
            "placement": "right"
          },
          "displayLabels": ["name", "value"]
        }
      },
      {
        "id": 12,
        "title": "Recent Pipeline Runs",
        "type": "logs",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 41},
        "targets": [
          {
            "expr": "{job=\"github-actions\",repository=\"$repository\"}",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "sortOrder": "Descending",
          "wrapLogMessage": false
        }
      },
      {
        "id": 13,
        "title": "Deployment Environment Health",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 51},
        "targets": [
          {
            "expr": "up{job=\"pitchey-production\"}",
            "refId": "Production",
            "legendFormat": "Production"
          },
          {
            "expr": "up{job=\"pitchey-staging\"}",
            "refId": "Staging",
            "legendFormat": "Staging"
          }
        ],
        "yAxes": [
          {
            "min": 0,
            "max": 1,
            "label": "Uptime (1=up, 0=down)"
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [1],
                "type": "lt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["Production", "1m", "now"]
              },
              "reducer": {
                "type": "last"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "1m",
          "frequency": "10s",
          "handler": 1,
          "name": "Production Environment Down",
          "noDataState": "no_data",
          "notifications": []
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "prometheus",
          "iconColor": "rgba(96, 181, 255, 1)",
          "expr": "deployment_frequency_total{environment=\"production\"}",
          "titleFormat": "Production Deployment",
          "textFormat": "Version: {{version}} by {{deployer}}"
        },
        {
          "name": "Pipeline Failures",
          "datasource": "prometheus",
          "iconColor": "rgba(255, 96, 96, 1)",
          "expr": "github_actions_workflow_runs_total{status=\"failure\"}",
          "titleFormat": "Pipeline Failure",
          "textFormat": "{{workflow_name}} failed"
        }
      ]
    }
  }
}