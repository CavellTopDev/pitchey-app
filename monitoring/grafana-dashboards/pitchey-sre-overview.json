{
  "dashboard": {
    "id": null,
    "title": "Pitchey - SRE Overview Dashboard",
    "tags": ["pitchey", "sre", "golden-signals"],
    "timezone": "browser",
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "templating": {
      "list": [
        {
          "name": "environment",
          "type": "custom",
          "query": "production,staging,development",
          "current": {
            "value": "production",
            "text": "production"
          },
          "options": [
            {"text": "Production", "value": "production"},
            {"text": "Staging", "value": "staging"},
            {"text": "Development", "value": "development"}
          ]
        },
        {
          "name": "service",
          "type": "query",
          "query": "label_values(http_requests_total, service)",
          "current": {
            "value": "all",
            "text": "All"
          }
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Service Health Score",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "avg(pitchey_health_score{environment=\"$environment\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "green", "value": 90}
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background"
        }
      },
      {
        "id": 2,
        "title": "Request Latency (P95)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(latency_seconds_bucket{environment=\"$environment\"}[5m])) by (le))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 500},
                {"color": "red", "value": 1000}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{environment=\"$environment\",status=~\"5..\"}[5m])) / sum(rate(http_requests_total{environment=\"$environment\"}[5m])) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Traffic (RPS)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{environment=\"$environment\"}[1m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "thresholds": {
              "steps": [
                {"color": "blue", "value": 0},
                {"color": "green", "value": 1},
                {"color": "yellow", "value": 10}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Golden Signals - Latency Distribution",
        "type": "graph",
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(latency_seconds_bucket{environment=\"$environment\"}[5m])) by (le))",
            "refId": "P50",
            "legendFormat": "P50"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(latency_seconds_bucket{environment=\"$environment\"}[5m])) by (le))",
            "refId": "P95",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(latency_seconds_bucket{environment=\"$environment\"}[5m])) by (le))",
            "refId": "P99",
            "legendFormat": "P99"
          }
        ],
        "yAxes": [
          {
            "unit": "ms",
            "min": 0
          },
          {
            "show": false
          }
        ],
        "xAxis": {
          "show": true
        },
        "legend": {
          "show": true,
          "values": true,
          "current": true
        }
      },
      {
        "id": 6,
        "title": "Traffic & Error Rate",
        "type": "graph",
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 8},
        "yAxes": [
          {
            "unit": "reqps",
            "min": 0,
            "label": "Requests/sec"
          },
          {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "label": "Error Rate %"
          }
        ],
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{environment=\"$environment\"}[1m]))",
            "refId": "Traffic",
            "legendFormat": "Request Rate",
            "yAxisIndex": 0
          },
          {
            "expr": "sum(rate(http_requests_total{environment=\"$environment\",status=~\"5..\"}[5m])) / sum(rate(http_requests_total{environment=\"$environment\"}[5m])) * 100",
            "refId": "Errors",
            "legendFormat": "Error Rate %",
            "yAxisIndex": 1
          }
        ]
      },
      {
        "id": 7,
        "title": "Saturation Metrics",
        "type": "graph",
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 17},
        "targets": [
          {
            "expr": "cpu_utilization_percent{environment=\"$environment\"}",
            "refId": "CPU",
            "legendFormat": "CPU %"
          },
          {
            "expr": "memory_utilization_percent{environment=\"$environment\"}",
            "refId": "Memory",
            "legendFormat": "Memory %"
          },
          {
            "expr": "cache_hit_rate{environment=\"$environment\"}",
            "refId": "Cache",
            "legendFormat": "Cache Hit Rate %"
          }
        ],
        "yAxes": [
          {
            "unit": "percent",
            "min": 0,
            "max": 100
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 8,
        "title": "Deployment Metrics",
        "type": "graph",
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 17},
        "targets": [
          {
            "expr": "increase(deployment_frequency_total{environment=\"$environment\",status=\"success\"}[1d])",
            "refId": "Deployments",
            "legendFormat": "Successful Deployments/day"
          },
          {
            "expr": "avg(deployment_lead_time_seconds{environment=\"$environment\"}) / 60",
            "refId": "LeadTime",
            "legendFormat": "Lead Time (minutes)"
          },
          {
            "expr": "deployment_change_failure_rate{environment=\"$environment\"}",
            "refId": "FailureRate",
            "legendFormat": "Change Failure Rate %"
          }
        ],
        "yAxes": [
          {
            "min": 0,
            "label": "Count / Time"
          },
          {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "label": "Failure Rate %"
          }
        ]
      },
      {
        "id": 9,
        "title": "Top Error Endpoints",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 26},
        "targets": [
          {
            "expr": "topk(10, sum by (endpoint) (rate(http_requests_total{environment=\"$environment\",status=~\"5..\"}[5m])))",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true
              },
              "renameByName": {
                "endpoint": "Endpoint",
                "Value": "Error Rate (req/s)"
              }
            }
          }
        ]
      },
      {
        "id": 10,
        "title": "Response Time Heatmap",
        "type": "heatmap",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 26},
        "targets": [
          {
            "expr": "sum(rate(latency_seconds_bucket{environment=\"$environment\"}[5m])) by (le)",
            "refId": "A",
            "format": "heatmap"
          }
        ],
        "heatmap": {
          "bucketSize": 0.1,
          "bucketOffset": 0
        }
      },
      {
        "id": 11,
        "title": "Cloudflare Workers Metrics",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 34},
        "targets": [
          {
            "expr": "cloudflare_requests_total{account=\"$account\"}",
            "refId": "Requests",
            "legendFormat": "CF Requests"
          },
          {
            "expr": "cloudflare_cpu_time_ms{account=\"$account\"} / 1000",
            "refId": "CPU",
            "legendFormat": "CF CPU Time (seconds)"
          },
          {
            "expr": "cloudflare_estimated_cost_usd{account=\"$account\",type=\"requests\"}",
            "refId": "Cost",
            "legendFormat": "Estimated Cost (USD)"
          }
        ],
        "yAxes": [
          {
            "min": 0,
            "label": "Count / Time"
          },
          {
            "unit": "currencyUSD",
            "min": 0,
            "label": "Cost"
          }
        ]
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "prometheus",
          "iconColor": "rgba(255, 96, 96, 1)",
          "expr": "deployment_frequency_total{environment=\"$environment\"}",
          "titleFormat": "Deployment",
          "textFormat": "Version: {{version}} by {{deployer}}"
        },
        {
          "name": "Incidents",
          "datasource": "prometheus",
          "iconColor": "rgba(255, 0, 0, 1)",
          "expr": "pitchey_incident_start",
          "titleFormat": "Incident Start",
          "textFormat": "{{title}}: {{severity}}"
        }
      ]
    }
  }
}