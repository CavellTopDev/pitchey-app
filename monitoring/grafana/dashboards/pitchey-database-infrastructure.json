{
  "dashboard": {
    "id": null,
    "title": "Pitchey Database & Infrastructure",
    "tags": ["database", "neon", "hyperdrive", "redis", "pitchey"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Database Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "neon_active_connections",
            "legendFormat": "Active Connections"
          }
        ],
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 80},
                {"color": "red", "value": 95}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Query Response Time P95",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, neon_query_duration_seconds)",
            "legendFormat": "P95 Query Time"
          }
        ],
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 500}
              ]
            },
            "unit": "ms"
          }
        }
      },
      {
        "id": 3,
        "title": "Database CPU Usage",
        "type": "stat",
        "targets": [
          {
            "expr": "neon_cpu_usage_percent",
            "legendFormat": "CPU Usage"
          }
        ],
        "gridPos": {"h": 6, "w": 6, "x": 12, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            },
            "unit": "percent"
          }
        }
      },
      {
        "id": 4,
        "title": "Redis Hit Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "upstash_redis_hit_rate",
            "legendFormat": "Redis Hit Rate"
          }
        ],
        "gridPos": {"h": 6, "w": 6, "x": 18, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 85},
                {"color": "green", "value": 95}
              ]
            },
            "unit": "percent"
          }
        }
      },
      {
        "id": 5,
        "title": "Database Connection Pool",
        "type": "graph",
        "targets": [
          {
            "expr": "hyperdrive_pool_active_connections",
            "legendFormat": "Active"
          },
          {
            "expr": "hyperdrive_pool_idle_connections",
            "legendFormat": "Idle"
          },
          {
            "expr": "hyperdrive_pool_max_connections",
            "legendFormat": "Max"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
        "yAxes": [
          {
            "label": "Connections",
            "min": 0
          }
        ]
      },
      {
        "id": 6,
        "title": "Query Performance Breakdown",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, neon_query_duration_seconds)",
            "legendFormat": "P50"
          },
          {
            "expr": "histogram_quantile(0.95, neon_query_duration_seconds)",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.99, neon_query_duration_seconds)",
            "legendFormat": "P99"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
        "yAxes": [
          {
            "label": "Query Time (ms)",
            "min": 0
          }
        ]
      },
      {
        "id": 7,
        "title": "Top Slow Queries",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, avg by (query_hash) (neon_query_duration_seconds))",
            "format": "table",
            "instant": true
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "renameByName": {"query_hash": "Query Hash", "Value": "Avg Duration (s)"}
            }
          }
        ]
      },
      {
        "id": 8,
        "title": "Redis Operations",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(upstash_redis_commands_total[1m]) * 60",
            "legendFormat": "Commands/min"
          },
          {
            "expr": "rate(upstash_redis_errors_total[1m]) * 60",
            "legendFormat": "Errors/min"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
        "yAxes": [
          {
            "label": "Operations/min",
            "min": 0
          }
        ]
      },
      {
        "id": 9,
        "title": "Database Throughput",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(neon_queries_total[1m]) * 60",
            "legendFormat": "Queries/min"
          },
          {
            "expr": "rate(neon_transactions_total[1m]) * 60",
            "legendFormat": "Transactions/min"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 22},
        "yAxes": [
          {
            "label": "Operations/min",
            "min": 0
          }
        ]
      },
      {
        "id": 10,
        "title": "KV Namespace Operations",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(cloudflare_kv_reads_total[1m]) * 60",
            "legendFormat": "KV Reads/min"
          },
          {
            "expr": "rate(cloudflare_kv_writes_total[1m]) * 60",
            "legendFormat": "KV Writes/min"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 22},
        "yAxes": [
          {
            "label": "Operations/min",
            "min": 0
          }
        ]
      }
    ]
  }
}