{
  "dashboard": {
    "id": null,
    "title": "Pitchey Business Metrics Dashboard",
    "tags": ["business", "api", "usage", "pitchey"],
    "timezone": "browser",
    "refresh": "5m",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Active Users (24h)",
        "type": "stat",
        "targets": [
          {
            "expr": "count(count by (user_id) (increase(pitchey_user_actions_total[24h])))",
            "legendFormat": "Active Users"
          }
        ],
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Pitch Creations (24h)",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(pitchey_pitches_created_total[24h])",
            "legendFormat": "New Pitches"
          }
        ],
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "thresholds": {
              "steps": [
                {"color": "blue", "value": null}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "NDA Requests (24h)",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(pitchey_nda_requests_total[24h])",
            "legendFormat": "NDA Requests"
          }
        ],
        "gridPos": {"h": 6, "w": 6, "x": 12, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "thresholds": {
              "steps": [
                {"color": "orange", "value": null}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "API Cost (24h)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(pitchey_api_cost_usd[24h]))",
            "legendFormat": "API Cost USD"
          }
        ],
        "gridPos": {"h": 6, "w": 6, "x": 18, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": null}
              ]
            },
            "unit": "currencyUSD"
          }
        }
      },
      {
        "id": 5,
        "title": "API Endpoint Usage",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (endpoint) (rate(pitchey_endpoint_requests_total[1h]))",
            "legendFormat": "{{endpoint}}"
          }
        ],
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 6},
        "options": {
          "pieType": "donut",
          "tooltip": {
            "mode": "single"
          }
        }
      },
      {
        "id": 6,
        "title": "User Portal Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (portal) (rate(pitchey_portal_logins_total[1h]))",
            "legendFormat": "{{portal}}"
          }
        ],
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 6},
        "options": {
          "pieType": "donut",
          "tooltip": {
            "mode": "single"
          }
        }
      },
      {
        "id": 7,
        "title": "User Engagement Timeline",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(pitchey_user_logins_total[5m]) * 300",
            "legendFormat": "Logins"
          },
          {
            "expr": "rate(pitchey_pitch_views_total[5m]) * 300",
            "legendFormat": "Pitch Views"
          },
          {
            "expr": "rate(pitchey_pitch_shares_total[5m]) * 300",
            "legendFormat": "Pitch Shares"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
        "yAxes": [
          {
            "label": "Actions per 5min",
            "min": 0
          }
        ]
      },
      {
        "id": 8,
        "title": "Feature Usage Heatmap",
        "type": "heatmap",
        "targets": [
          {
            "expr": "sum by (feature, hour) (rate(pitchey_feature_usage_total[1h]))",
            "format": "heatmap",
            "legendFormat": "{{feature}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "dataFormat": "tsbuckets",
        "heatmap": {
          "xAxis": {
            "show": true
          },
          "yAxis": {
            "show": true,
            "logBase": 1
          }
        }
      },
      {
        "id": 9,
        "title": "Performance Impact on UX",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, pitchey_page_load_time_seconds)",
            "legendFormat": "P95 Page Load Time"
          },
          {
            "expr": "avg(pitchey_user_session_duration_minutes)",
            "legendFormat": "Avg Session Duration"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "yAxes": [
          {
            "label": "Time",
            "min": 0
          }
        ]
      },
      {
        "id": 10,
        "title": "Top Performing Content",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum by (pitch_id) (rate(pitchey_pitch_views_total[24h])))",
            "format": "table",
            "instant": true
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "renameByName": {"pitch_id": "Pitch ID", "Value": "Views/24h"}
            }
          }
        ]
      },
      {
        "id": 11,
        "title": "Cost Optimization Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(pitchey_cache_hits_total[1h]) / rate(pitchey_requests_total[1h]) * 100",
            "legendFormat": "Cache Efficiency %"
          },
          {
            "expr": "rate(pitchey_db_queries_total[1h])",
            "legendFormat": "DB Query Rate"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "yAxes": [
          {
            "label": "Efficiency / Rate",
            "min": 0
          }
        ]
      }
    ]
  }
}