# Netlify _headers file for security and performance

# Global security headers for all pages
/*
  # Security Headers
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  X-XSS-Protection: 1; mode=block
  
  # Content Security Policy for React apps
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://js.stripe.com https://checkout.stripe.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https: blob:; connect-src 'self' https://pitchey-backend-fresh.deno.dev https://api.stripe.com; frame-src https://js.stripe.com https://checkout.stripe.com;
  
  # Performance Headers
  Cache-Control: public, max-age=31536000, immutable

# Static assets - longer cache
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Images
/images/*
  Cache-Control: public, max-age=2592000

# Service worker and manifest
/sw.js
  Cache-Control: no-cache

/manifest.json
  Cache-Control: public, max-age=86400

# HTML files - no cache to ensure fresh content
/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0