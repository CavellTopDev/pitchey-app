# Cloudflare Pages _headers file for security and performance

# Global security headers for all pages
/*
  # Security Headers
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  X-XSS-Protection: 1; mode=block
  Permissions-Policy: geolocation=(), microphone=(), camera=()
  
  # Content Security Policy for React apps (includes Sentry with worker support)
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://js.stripe.com https://checkout.stripe.com https://browser.sentry-cdn.com; worker-src 'self' blob:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' data: https: blob:; connect-src 'self' https://pitchey-api-production.cavelltheleaddev.workers.dev https://pitchey-backend-fresh.deno.dev wss://pitchey-backend-fresh.deno.dev https://*.pitchey.pages.dev wss://*.pitchey.pages.dev https://api.stripe.com https://*.sentry.io https://*.ingest.sentry.io; frame-src https://js.stripe.com https://checkout.stripe.com;
  
  # Performance Headers - don't cache index.html
  Cache-Control: no-cache, no-store, must-revalidate
  
  # Enable compression
  Content-Encoding: gzip
  Vary: Accept-Encoding

# Static assets - longer cache
/assets/*
  Cache-Control: public, max-age=31536000, immutable

