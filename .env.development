# Pitchey Development Environment Variables
# Redis Configuration

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/pitchey
JWT_SECRET=dev_jwt_secret_key_for_testing_only_123456789

# Local Redis Configuration (Docker)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_WINDOW_MS=900000

# Development Environment
NODE_ENV=development
DENO_ENV=development
PORT=8000
FRONTEND_URL=http://localhost:5173

# Upstash Redis (for testing production behavior)
# UPSTASH_REDIS_REST_URL=your_upstash_url_here
# UPSTASH_REDIS_REST_TOKEN=your_upstash_token_here

# Development Service URLs
S3_BUCKET=pitchey-dev-uploads
AWS_ACCESS_KEY_ID=dev_placeholder
AWS_SECRET_ACCESS_KEY=dev_placeholder
AWS_REGION=us-east-1

# Email Configuration (Development)
RESEND_API_KEY=dev_placeholder
EMAIL_FROM=dev@pitchey.local

# Stripe Configuration (Test mode)
STRIPE_SECRET_KEY=sk_test_placeholder
STRIPE_WEBHOOK_SECRET=whsec_placeholder

# Sentry Configuration (Development)
SENTRY_DSN=your_dev_sentry_dsn_here
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=pitchey-dev
SENTRY_SERVER_NAME=localhost

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_WEBSOCKETS=true
ENABLE_FILE_UPLOADS=true
ENABLE_EMAIL_NOTIFICATIONS=false

# Cache TTL Settings (seconds)
USER_CACHE_TTL=600
PITCH_CACHE_TTL=300
PUBLIC_DATA_CACHE_TTL=180
ANALYTICS_CACHE_TTL=3600
SEARCH_CACHE_TTL=300

# Monitoring
ENABLE_PERFORMANCE_MONITORING=true
LOG_LEVEL=debug

# WebSocket Configuration (Development)
WEBSOCKET_ENDPOINT=/ws
WEBSOCKET_PROTOCOL=pitchey-v1

# WebSocket Rate Limiting (Development - More Lenient)
WS_RATE_LIMIT_ENABLED=true
WS_RATE_LIMIT_MAX_MESSAGES=200
WS_RATE_LIMIT_WINDOW_MS=60000
WS_RATE_LIMIT_REFILL_RATE=5

# WebSocket Analytics (Development)
WS_ANALYTICS_ENABLED=true
WS_PRESENCE_TRACKING_ENABLED=true
WS_MESSAGE_QUEUE_ENABLED=true

# Development WebSocket Settings
WS_HEARTBEAT_INTERVAL=15000
WS_CLEANUP_INTERVAL=30000
WS_SESSION_TIMEOUT=180000

# WebSocket Debug Settings
WS_DEBUG_LOGGING=true
WS_DETAILED_ANALYTICS=true