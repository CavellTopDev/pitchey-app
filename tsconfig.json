{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "WebWorker"],
    "types": ["@cloudflare/workers-types"],
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/worker-integrated.ts",
    "src/handlers/**/*.ts",
    "src/utils/*.ts",
    "src/middleware/contract-validator.ts",
    "src/durable-objects/**/*.ts",
    "src/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".wrangler",
    "frontend",
    "tests",
    "src/utils/rbac-integration.ts",
    "src/services/**/*.ts",
    "src/handlers/payments.ts",
    "src/auth/auth-adapter.ts",
    "src/auth/better-auth-cloudflare.ts",
    "src/auth/better-auth-cloudflare-config.ts",
    "src/auth/better-auth-config.ts",
    "src/auth/better-auth-neon-config.ts",
    "src/auth/better-auth-neon-raw-sql.ts",
    "src/auth/better-auth-session-handler.ts",
    "src/auth/better-auth-worker-handler.ts",
    "src/auth/better-auth-worker-integration.ts",
    "src/auth/raw-sql-auth-config.ts",
    "src/auth/raw-sql-auth.ts",
    "src/db/**/*.ts",
    "src/utils/validation.ts",
    "src/utils/jwt.ts",
    "src/utils/env-validation.ts",
    "src/utils/telemetry.ts",
    "src/utils/env-config.ts",
    "src/config/**/*.ts",
    "src/middleware/security.middleware.ts",
    "src/middleware/middleware.pipeline.ts",
    "src/middleware/error-handler.ts",
    "src/testing/**/*.ts",
    "src/handlers/webhooks/**/*.ts",
    "src/handlers/websocket/**/*.ts",
    "src/handlers/video.ts",
    "src/workers/**/*.ts",
    "src/types/messaging.types.ts",
    "src/types/pitch-validation.types.ts",
    "src/types/intelligence.types.ts",
    "src/types/email.types.ts",
    "src/handlers/intelligence.ts",
    "src/handlers/pitch-validation.ts",
    "src/handlers/mobile-auth.ts",
    "src/handlers/mobile-api.ts",
    "src/handlers/secure-portal-endpoints.ts",
    "src/handlers/production-dashboard.ts",
    "src/handlers/mobile-push-notifications.ts",
    "src/handlers/legal-document-automation.ts",
    "src/handlers/notification-routes.ts",
    "src/handlers/nda-handlers.ts",
    "src/handlers/settings.ts",
    "src/handlers/auth-password.ts",
    "src/handlers/messaging.ts",
    "src/handlers/gdpr-handler.ts",
    "src/handlers/advanced-search.ts",
    "src/utils/permission-helpers.ts",
    "src/utils/password-validation.ts",
    "src/utils/performance-monitor.ts",
    "src/utils/request.validation.ts",
    "src/utils/database-error-handler.ts",
    "src/utils/notifications.ts",
    "src/handlers/nda.ts",
    "src/handlers/teams.ts",
    "src/handlers/creator-dashboard.ts",
    "src/handlers/notifications.ts",
    "src/handlers/ab-testing-websocket.ts",
    "src/handlers/stub-endpoints.ts",
    "src/handlers/contracts.ts",
    "src/handlers/media-access.ts",
    "src/handlers/health-monitoring.ts",
    "src/handlers/investor-portfolio.ts",
    "src/handlers/validated-endpoints.ts",
    "src/handlers/pitches.ts",
    "src/workflows/**/*.ts"
  ]
}
