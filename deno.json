{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "compilerOptions": {
    "lib": ["deno.window", "deno.ns"],
    "strict": true
  },
  "tasks": {
    "test": "deno test --allow-net --allow-env",
    "test:api": "deno test tests/api/ --allow-net --allow-env",
    "test:contract": "deno test tests/api/contract-bridge-test.ts --allow-net --allow-env",
    "test:sentry": "deno test tests/api/sentry-integration-test.ts --allow-net --allow-env"
  },
  "imports": {
    "std/": "https://deno.land/std@0.208.0/"
  },
  "lint": {
    "include": ["tests/"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "include": ["tests/"],
    "indentWidth": 2,
    "semiColons": true
  }
}
