# Email Service Configuration
# Copy this file to .env.local and configure your email provider

# Email Provider (sendgrid, ses, smtp)
EMAIL_PROVIDER=smtp

# General Email Settings
EMAIL_FROM=noreply@pitchey.com
EMAIL_FROM_NAME=Pitchey
EMAIL_REPLY_TO=support@pitchey.com
BASE_URL=https://pitchey.com

# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here

# AWS SES Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# SMTP Configuration (for development/testing)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
SMTP_SECURE=true

# Email Queue Settings
EMAIL_QUEUE_BATCH_SIZE=25
EMAIL_QUEUE_MAX_ATTEMPTS=3
EMAIL_RETRY_DELAY_MINUTES=60

# Weekly Digest Settings
DIGEST_DEFAULT_DAY=1  # 1=Monday, 7=Sunday
DIGEST_DEFAULT_TIME=09:00:00
DIGEST_DEFAULT_TIMEZONE=UTC

# Email Cleanup Settings
EMAIL_RETENTION_DAYS=30
FAILED_EMAIL_RETENTION_DAYS=7

# Development/Testing Settings
EMAIL_DEBUG=true
EMAIL_PREVIEW_MODE=false  # Set to true to prevent actual sending in development

# Webhook Security (optional)
EMAIL_WEBHOOK_SECRET=your_webhook_secret_here

# Rate Limiting
EMAIL_RATE_LIMIT_PER_HOUR=1000
EMAIL_RATE_LIMIT_PER_DAY=5000