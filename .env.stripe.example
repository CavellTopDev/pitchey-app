# Stripe Configuration - Required for Payment Processing
# Copy this file to .env.local and add your actual Stripe keys

# Stripe API Keys (Get from Stripe Dashboard)
STRIPE_SECRET_KEY=sk_test_...your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_...your_stripe_publishable_key_here

# Stripe Webhook Secret (Get from Stripe Dashboard > Webhooks)
STRIPE_WEBHOOK_SECRET=whsec_...your_webhook_secret_here

# Stripe Price IDs for Subscription Tiers
# Create these in Stripe Dashboard > Products
STRIPE_PRICE_CREATOR_BASIC=price_...creator_basic_monthly
STRIPE_PRICE_CREATOR_PRO=price_...creator_pro_monthly
STRIPE_PRICE_INVESTOR=price_...investor_monthly
STRIPE_PRICE_PRODUCTION=price_...production_monthly

# For yearly subscriptions (optional)
STRIPE_PRICE_CREATOR_BASIC_YEARLY=price_...creator_basic_yearly
STRIPE_PRICE_CREATOR_PRO_YEARLY=price_...creator_pro_yearly
STRIPE_PRICE_INVESTOR_YEARLY=price_...investor_yearly
STRIPE_PRICE_PRODUCTION_YEARLY=price_...production_yearly

# Application URLs (for redirects and webhooks)
APP_URL=http://localhost:5173
API_URL=http://localhost:8001

# Stripe Connect (for creator payouts) - Optional
STRIPE_CONNECT_CLIENT_ID=ca_...your_connect_client_id

# Test Mode Configuration
STRIPE_TEST_MODE=true