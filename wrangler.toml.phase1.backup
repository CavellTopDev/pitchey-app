name = "pitchey-production"
main = "src/worker-browse-fix.ts"
compatibility_date = "2024-11-01"
compatibility_flags = ["nodejs_compat"]

# Production Worker with Neon Hyperdrive - No More Proxy Needed!
# All API endpoints run directly in Worker with edge database connections

[vars]
# Production configuration
FRONTEND_URL = "https://pitchey-5o8.pages.dev"
JWT_SECRET = "vYGh89KjLmNpQrStUwXyZ123456789ABCDEFGHIJKLMNOPQRSTuvwxyz"

# Error tracking
SENTRY_DSN = "https://fd5664ae577039ccb7cce31e91f54533@o4510137537396736.ingest.de.sentry.io/4510138308755536"
SENTRY_ENVIRONMENT = "production"
SENTRY_RELEASE = "unified-worker-v1.6-connection-pool-fix"

# KV for static content caching (replaced with Upstash Redis for dynamic data)
[[kv_namespaces]]
binding = "CACHE"
id = "98c88a185eb448e4868fcc87e458b3ac"

# Upstash Redis for real-time data and consistency
# TODO: Replace with your actual Upstash Redis configuration
# [[services]]
# binding = "REDIS"
# service = "your-upstash-redis-service"
# 
# Alternative: Add as environment variables
# UPSTASH_REDIS_REST_URL = "https://your-redis.upstash.io"
# UPSTASH_REDIS_REST_TOKEN = "your-token"

# R2 for file storage
[[r2_buckets]]
binding = "R2_BUCKET"
bucket_name = "pitchey-uploads"

# Durable Objects for real-time features with Hibernation API
[[durable_objects.bindings]]
name = "WEBSOCKET_ROOM"
class_name = "WebSocketRoom"

# Neon PostgreSQL via Hyperdrive for optimal edge performance
[[hyperdrive]]
binding = "HYPERDRIVE"
id = "983d4a1818264b5dbdca26bacf167dee"

# Migrations - WebSocketRoom re-enabled with optimizations
[[migrations]]
tag = "v3"
new_classes = ["WebSocketRoom"]

# Production Environment Configuration
[env.production]
name = "pitchey-production"

[env.production.vars]
FRONTEND_URL = "https://pitchey-5o8.pages.dev"
JWT_SECRET = "vYGh89KjLmNpQrStUwXyZ123456789ABCDEFGHIJKLMNOPQRSTuvwxyz"
SENTRY_DSN = "https://fd5664ae577039ccb7cce31e91f54533@o4510137537396736.ingest.de.sentry.io/4510138308755536"
SENTRY_ENVIRONMENT = "production"
SENTRY_RELEASE = "unified-worker-v1.6-connection-pool-fix"

# Production environment uses the same bindings as default
[[env.production.kv_namespaces]]
binding = "CACHE"
id = "98c88a185eb448e4868fcc87e458b3ac"

[[env.production.r2_buckets]]
binding = "R2_BUCKET"
bucket_name = "pitchey-uploads"

[[env.production.hyperdrive]]
binding = "HYPERDRIVE"
id = "983d4a1818264b5dbdca26bacf167dee"

# Durable Objects for production environment
[[env.production.durable_objects.bindings]]
name = "WEBSOCKET_ROOM"
