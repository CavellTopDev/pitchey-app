{
  "name": "pitchey-cloudflare-worker",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "deploy:local": "./deploy-cloudflare.sh",
    "dev": "wrangler dev",
    "tail": "wrangler tail",
    "build": "npm run build:worker && npm run build:frontend",
    "build:worker": "esbuild src/worker-integrated.ts --bundle --format=esm --outfile=dist/worker.js --platform=browser --target=es2020",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "deno test tests/unit/*.test.ts --allow-env",
    "test:integration": "deno test tests/integration/*.test.ts --allow-net --allow-env",
    "test:api": "deno test tests/api/api-test-suite.ts --allow-net --allow-env",
    "test:load": "deno run --allow-net --allow-env tests/load/scenarios/browse-load.test.ts",
    "test:ci": "npm run test:unit && npm run test:api",
    "test:e2e:smoke": "deno test --allow-all tests/e2e/smoke.test.ts",
    "lint": "cd frontend && npm run lint",
    "format": "deno fmt && cd frontend && npm run format",
    "type-check": "cd frontend && npm run type-check",
    "db:migrate": "deno run --allow-all src/db/migrate.ts",
    "db:migrate:prod": "DENO_ENV=production deno run --allow-all src/db/migrate.ts",
    "db:migrate:create": "deno run --allow-all src/db/create-migration.ts",
    "db:migrate:status": "deno run --allow-all src/db/migrate.ts status",
    "db:migrate:rollback": "deno run --allow-all src/db/migrate.ts rollback",
    "db:seed:preview": "deno run --allow-all src/db/seed-preview.ts",
    "db:health-check": "deno run --allow-all src/db/health-check.ts",
    "secrets:setup": "./scripts/setup-secrets.sh",
    "cache:warm": "curl -X POST https://pitchey-production.cavelltheleaddev.workers.dev/api/admin/cache/warm",
    "health:check": "curl https://pitchey-production.cavelltheleaddev.workers.dev/health",
    "metrics": "curl https://pitchey-production.cavelltheleaddev.workers.dev/metrics",
    "perf:test": "./performance/scripts/run-all-tests.sh",
    "perf:test:light": "INTENSITY=light ./performance/scripts/run-all-tests.sh",
    "perf:test:heavy": "INTENSITY=heavy ./performance/scripts/run-all-tests.sh",
    "perf:api": "k6 run performance/k6/api-load-test.js",
    "perf:websocket": "k6 run performance/k6/websocket-load-test.js",
    "perf:database": "k6 run performance/k6/database-stress-test.js",
    "perf:lighthouse": "cd performance/lighthouse && node core-web-vitals.js",
    "perf:analyze": "node performance/analysis/performance-analyzer.js",
    "perf:setup": "cd performance/lighthouse && npm install"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@sendgrid/mail": "^8.1.6",
    "@sentry/browser": "^7.0.0",
    "@upstash/redis": "^1.35.7",
    "axios": "^1.6.0",
    "better-auth": "^1.4.7",
    "playwright": "^1.57.0",
    "prom-client": "^15.1.0",
    "resend": "^6.6.0",
    "toucan-js": "^4.1.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.0.0",
    "@types/node": "^20.0.0",
    "esbuild": "^0.19.0",
    "form-data": "^4.0.5",
    "wrangler": "^4.51.0"
  }
}
