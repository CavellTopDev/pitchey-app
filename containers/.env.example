# Pitchey Container Services Environment Configuration
# Copy this file to .env and configure your values

# Security
JWT_SECRET=your-super-secure-jwt-secret-here
API_KEY_DEFAULT=your-default-api-key-here

# Redis Configuration
REDIS_URL=redis://redis:6379

# AI Service API Keys (optional)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Monitoring
GRAFANA_PASSWORD=admin

# Service-specific Configuration (optional overrides)
# Video Processor
VIDEO_PROCESSOR_MAX_FILE_SIZE=500000000
VIDEO_PROCESSOR_MAX_WORKERS=3

# Document Processor  
DOCUMENT_PROCESSOR_MAX_FILE_SIZE=100000000
DOCUMENT_PROCESSOR_MAX_WORKERS=3

# AI Inference
AI_INFERENCE_MAX_WORKERS=2

# Media Transcoder
MEDIA_TRANSCODER_MAX_FILE_SIZE=1000000000
MEDIA_TRANSCODER_MAX_WORKERS=2

# Code Executor
CODE_EXECUTOR_MAX_WORKERS=2

# Development/Debug
DEBUG=false